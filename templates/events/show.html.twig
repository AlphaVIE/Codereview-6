{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
<h1 class="d-flex justify-content-center my-4">Events</h1>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1 g-5 justify-content-center">
    <div class="card" style="width: 18rem;">
        <img src="{{ event.eventImage }}" class="card-img-top">
        <div class="card-body">
            <h1 class="card-title">{{ event.eventName }}</h1>
            <p class="card-text">Description: {{event.eventDescription}}</p>
            <p class="card-text">Capacity: {{event.eventCapacity}}</p>
            <p class="card-text">Email: {{event.eventEmail}}</p>
            <p class="card-text">Phone: {{event.eventPhone}}</p>
            <p class="card-text">Address: {{event.eventAddress}}</p>
            <p class="card-text">URL: {{event.eventURL}}</p>
            <p class="card-text">Date: {{event.eventDate | date('F j, Y') }}</p>
            <p class="card-text">Time: {{ event.eventTime | format_time('short') }}</p>
        </div>
        <div class="btns d-flex justify-content-center">
            <a class="btn btn-success" href="{{ path('app_events_index') }}">Home</a>

            <a class="btn btn-primary" href="{{ path('app_events_edit', {'id': event.id}) }}">Update</a>
            {{ include('events/_delete_form.html.twig') }}
        </div>
    </div>
</div>



{% endblock %}