{% extends 'base.html.twig' %}

{% block title %}Events index{% endblock %}

{% block body %}
<h2 class="my-4">Events</h2>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1 g-5 justify-content-center">
    {% for event in events%}
    <div class="col d-flex justify-content-center">
        <div class="card justify-content-center" style="width: 18rem;">
            <img src="{{ event.eventImage }}" class="card-img-top" alt="..." style="height: 10em;">
            <div class="card-body">
                <h5 class="card-title">{{ event.eventName }}</h5>
                <p class="card-text">{{event.eventDescription}}</p>
                <a class="btn btn-warning" href="{{ path('app_events_show', {'id': event.id}) }}">Details</a><br>
                <a class="btn btn-primary my-2" href="{{ path('app_events_edit', {'id': event.id}) }}">Update</a> <br>{{ include('events/_delete_form.html.twig') }}
                
            </div>
        </div>
    </div>
    {% endfor %}
</div>
<a href="{{ path('app_events_new') }}" class="btn btn-success">Create new</a>
{% endblock %}